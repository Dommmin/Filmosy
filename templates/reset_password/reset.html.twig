{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <section class="vh-100 bg-image" style="background-image:  url('{{ asset('assets/mdb-ui-kit/img/login-background.jpg') }}');">
        <div class="mask d-flex">
            <div class="container">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                        <div class="card rounded-7" style="background: rgba(0,0,0,0.5);">
                            <div class="card-body row d-flex justify-content-center text-center">

                                <h1>Reset your password</h1>

                                {{ form_start(resetForm) }}
                                {{ form_row(resetForm.plainPassword) }}
                                <button class="btn btn-primary">Reset password</button>
                                {{ form_end(resetForm) }}


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>





{% endblock %}

{% block footer %}{% endblock %}
