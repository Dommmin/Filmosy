{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}


    <section class="vh-100 bg-image" style="background-image:  url('{{ asset('assets/mdb-ui-kit/img/login-background.jpg') }}');">
        <div class="mask d-flex">
            <div class="container">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                        <div class="card rounded-7" style="background: rgba(0,0,0,0.5);">
                            <div class="card-body row d-flex justify-content-center text-center">

                                <h5>
                                    If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
                                    This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                                </h5>
                                <p>If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}
{% block footer %}{% endblock %}
