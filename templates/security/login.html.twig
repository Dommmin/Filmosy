{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<form method="post">
    <section class="vh-100 bg-image" style="background-image:  url('{{ asset('assets/mdb-ui-kit/img/login-background.jpg') }}');">
        <div class="mask d-flex">
            <div class="container">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                        <div class="card rounded-7" style="background: rgba(0,0,0,0.5);">
                            <div class="card-body row d-flex justify-content-center text-center">
                                <i class="fas fa-users fa-5x mb-4"></i>
                                {% if error %}
                                    <div class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <div class="row justify-content-center mt-2">
                                    <div class="col-8">
                                        <div class="input-group flex-nowrap mb-2">
                                            <span class="input-group-text" id="addon-wrapping"><i class="fa fa-user"></i></span>
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control col-7" autocomplete="email" required autofocus placeholder="Email" aria-label="Email" aria-describedby="addon-wrapping"/>
                                        </div>
                                    </div>
                                </div>

                                <div class="row justify-content-center">
                                    <div class="col-8">
                                        <div class="input-group flex-nowrap mt-4 mb-2">
                                            <span class="input-group-text" id="addon-wrapping"><i class="fa fa-lock"></i></span>
                                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="addon-wrapping" autocomplete="current-password" required>
                                        </div>
                                    </div>
                                </div>

                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >

                                <div class="row mb-3 mt-3 justify-content-center">
                                    <div class="col-4">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="_remember_me" class="form-check-input"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <a href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
                                    </div>
                                </div>
                                <div>
                                    <button class="btn btn-outline- bg-gradient btn-success mb-2 mt-2 col-5" type="submit" style="letter-spacing: 2px">
                                        Login
                                    </button>
                                    <p class="text-center text-muted mt-4 mb-0">Don't have an account? <a href="{{ path('app_register') }}" class="fw-bold"><u class="text-decoration-none">Register</u></a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
{% endblock %}

{% block footer %}{% endblock %}
